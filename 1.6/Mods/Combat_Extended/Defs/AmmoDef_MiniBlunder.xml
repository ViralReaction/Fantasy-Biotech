<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- ==================== AmmoSet ========================== -->
	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_MiniBlunderbussShot_FantasyBiotech</defName>
		<label>Blunderbuss Shot</label>
		<ammoTypes>
			<Ammo_BlunderbussShot>Bullet_MiniBlunderbussShot_FantasyBiotech</Ammo_BlunderbussShot>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ================== Projectile ================== -->
	<ThingDef ParentName="BlunderbussShotBullet">
		<defName>Bullet_MiniBlunderbussShot_FantasyBiotech</defName>
		<label>blunderbuss pellet</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>54</speed>
			<damageAmountBase>5</damageAmountBase>
			<pelletCount>12</pelletCount>
			<armorPenetrationSharp>3</armorPenetrationSharp>
			<armorPenetrationBlunt>1.32</armorPenetrationBlunt>
			<spreadMult>25</spreadMult>
			<shieldDamageMultiplier>0.25</shieldDamageMultiplier>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ProjectileFleck">
				<FleckDatas>
					<li>
						<startDelayTick>0</startDelayTick>
						<fleck>Fleck_CEBlackpowderSmoke</fleck>
						<emissionsPerTick>1</emissionsPerTick>
						<flecksPerEmission>1</flecksPerEmission>
						<cutoffTickRange>2</cutoffTickRange>
						<scale>1.5~1.7</scale>
						<originOffset>0.0~2.5</originOffset>
					</li>
				</FleckDatas>
			</li>
		</comps>
	</ThingDef>

</Defs>