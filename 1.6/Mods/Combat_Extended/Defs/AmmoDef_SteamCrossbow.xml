		<defName>AmmoSet_CrossbowBolt_Steam</defName>
		<label>crossbow bolts</label>
		<ammoTypes>
			<Ammo_CrossbowBolt_Stone>Projectile_CrossbowBolt_Stone_Steam</Ammo_CrossbowBolt_Stone>
			<Ammo_CrossbowBolt_Iron MayRequire="dankpyon.medieval.overhaul">Projectile_CrossbowBolt_Iron_Steam</Ammo_CrossbowBolt_Iron>
