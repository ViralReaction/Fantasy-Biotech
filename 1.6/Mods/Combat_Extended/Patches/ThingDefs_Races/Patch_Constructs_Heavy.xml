<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- ========== Heavy Mechanoid ========== -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="VR_Construct_Centurion_Burner"]/combatPower</xpath>
		<value>
			<combatPower>550</combatPower>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/PawnKindDef[defName="VR_Construct_Centurion_Shooter"]/combatPower</xpath>
		<value>
			<combatPower>400</combatPower>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/PawnKindDef[defName="VR_Construct_Centurion_Shooter"]</xpath>
		<value>
			<li Class="CombatExtended.LoadoutPropertiesExtension">
				<primaryMagazineCount>
					<min>50</min>
					<max>60</max>
				</primaryMagazineCount>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="VR_HeavyConstruct"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>6</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="VR_HeavyConstruct"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>4</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="VR_HeavyConstruct"]/statBases</xpath>
		<value>
			<CarryWeight>150</CarryWeight>
			<CarryBulk>60</CarryBulk>
			<AimingAccuracy>1.7</AimingAccuracy>
			<ShootingAccuracyPawn>1.5</ShootingAccuracyPawn>
			<MeleeDodgeChance>0.13</MeleeDodgeChance>
			<MeleeCritChance>0.12</MeleeCritChance>
			<MeleeParryChance>0.09</MeleeParryChance>
			<MaxHitPoints>300</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="VR_Construct_Centurion"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<label>head</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>4</power>
					<cooldownTime>2.0</cooldownTime>
					<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
					<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
					<armorPenetrationBlunt>0.5</armorPenetrationBlunt>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>right hand</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>2.0</cooldownTime>
					<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
					<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
					<armorPenetrationBlunt>12</armorPenetrationBlunt>
				</li>
				<li Class="CombatExtended.ToolCE">
					<label>left hand</label>
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>8</power>
					<cooldownTime>2.0</cooldownTime>
					<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
					<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
					<armorPenetrationBlunt>12</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[@Name="VR_Construct_Centurion"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[@Name="VR_Construct_Centurion"]</xpath>
			<value>
				<comps />
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="VR_Construct_Centurion"]/comps</xpath>
		<value>
			<li Class="CombatExtended.CompProperties_ArmorDurability">
				<Durability>1880</Durability>
				<Regenerates>true</Regenerates>
				<RegenInterval>1250</RegenInterval>
				<RegenValue>5</RegenValue>
				<Repairable>true</Repairable>
				<RepairIngredients>
					<Steel>5</Steel>
				</RepairIngredients>
				<RepairTime>300</RepairTime>
				<RepairValue>200</RepairValue>
				<MinArmorPct>0.5</MinArmorPct>
			</li>
		</value>
	</Operation>

	<!-- Sphere -->
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="VR_Construct_Centurion"]</xpath>
		<value>
			<li Class="CombatExtended.RacePropertiesExtensionCE">
				<bodyShape>Humanoid</bodyShape>
				<canParry>true</canParry>
				<maxParry>4</maxParry>
			</li>
		</value>
	</Operation>

</Patch>