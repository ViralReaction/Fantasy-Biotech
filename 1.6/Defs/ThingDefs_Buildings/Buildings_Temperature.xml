<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>VR_Heater_Steam</defName>
		<label>steam heater</label>
		<description>A device that converts electricity into heat. It can automatically turn itself on or off to reach a specific target temperature.</description>
		<thingClass>PipeSystem.Building_ResourceHeater</thingClass>
		<graphicData>
			<texPath>Things/Building/Misc/TempControl/Steam_heater</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.5,0.3,0.7)</volume>
				<offset>(0,0,-0.15)</offset>
			</shadowData>
			<damageData>
				<rect>(0.234375,0,0.515625,0.984375)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
			<drawSize>(2.5,2.5)</drawSize>
		</graphicData>
		<minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>30</pathCost>
		<blockWind>true</blockWind>
		<rotatable>false</rotatable>
		<fillPercent>0.4</fillPercent>
		<thingCategories>
			<li>BuildingsTemperature</li>
		</thingCategories>
		<statBases>
			<WorkToBuild>1000</WorkToBuild>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>6</Mass>
			<Flammability>0.5</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<costList>
			<Steel>50</Steel>
		</costList>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<placeWorkers>
			<li>PlaceWorker_Heater</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<comps>
			<li Class="PipeSystem.CompProperties_ResourceTrader">
				<compClass>FantasyBiotech.CompResourceTrader_Steam</compClass>
				<pipeNet>VR_SteamNet</pipeNet>
				<consumptionPerTick>3</consumptionPerTick>
			</li>
			<li Class="CompProperties_TempControl">
				<compClass>FantasyBiotech.CompTempControl_Steam</compClass>
				<energyPerSecond>21</energyPerSecond>
			</li>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(255,150,100,0)</glowColor>
			</li>
			<li Class="CompProperties_Breakdownable"/>
		</comps>
		<designationCategory>Temperature</designationCategory>
		<designationHotKey>Misc2</designationHotKey>
		<researchPrerequisites>
			<li>VR_SteamPower</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
		<defName>VR_Cooler_Steam</defName>
		<label>steam fan</label>
		<description>A traditional unpowered cooler that works by water evaporation. Must be regularly replenished with wood. Not efficient enough to refrigerate food.</description>
		<category>Building</category>
		<graphicData>
			<texPath>Things/Building/Misc/TempControl/Steam_cooler</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawRotated>false</drawRotated>
			<allowFlip>false</allowFlip>
			<addTopAltitudeBias>true</addTopAltitudeBias>
			<shadowData>
				<volume>(0.9,0.3,0.9)</volume>
			</shadowData>
			<damageData>
				<rect>(0.2,0,0.6,0.1)</rect>
			</damageData>
			<drawSize>(2.5,2.5)</drawSize>
		</graphicData>
		<rotatable>false</rotatable>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<pathCost>30</pathCost>
		<constructEffect>ConstructDirt</constructEffect>
		<tickerType>Normal</tickerType>
		<drawerType>RealtimeOnly</drawerType>
		<fillPercent>0.40</fillPercent>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>200</WorkToBuild>
			<Flammability>1</Flammability>
		</statBases>
		<selectable>true</selectable>
		<costList>
			<Steel>50</Steel>
		</costList>
		<building>
			<destroySound>BuildingDestroyed_Metal_Small</destroySound>
		</building>
		<soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
		<placeWorkers>
			<li>PlaceWorker_CoolerSimple</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
		<comps>
			<li Class="CompProperties_HeatPusher">
				<compClass>PipeSystem.CompHeatPusherNeedResource</compClass>
				<heatPerSecond>-11</heatPerSecond>
				<heatPushMinTemperature>17</heatPushMinTemperature>
			</li>
			<li Class="PipeSystem.CompProperties_ResourceTrader">
				<compClass>FantasyBiotech.CompResourceTrader_Steam</compClass>
				<pipeNet>VR_SteamNet</pipeNet>
				<consumptionPerTick>3</consumptionPerTick>
			</li>
		</comps>
		<designationCategory>Temperature</designationCategory>
		<designationHotKey>Misc4</designationHotKey>
		<researchPrerequisites>
			<li>PassiveCooler</li>
			<li>VR_SteamPower</li>
		</researchPrerequisites>
	</ThingDef>

	<ThingDef Abstract="True" Name="VRSteam_LampBase" ParentName="NonBuildableLampBase">
		<designationCategory>Furniture</designationCategory>
		<minifiedDef>MinifiedThing</minifiedDef>
		<uiOrder>2800</uiOrder>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<statBases>
			<WorkToBuild>300</WorkToBuild>
		</statBases>
		<researchPrerequisites>
			<li>VR_SteamPower</li>
		</researchPrerequisites>
		<placeWorkers>
			<li>PlaceWorker_GlowRadius</li>
		</placeWorkers>
		<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
	</ThingDef>
  
	<ThingDef ParentName="VRSteam_LampBase">
		<defName>VRSteam_WallLamp</defName>
		<label>steam wall lamp</label>
		<description>A steam-powered wall-mounted lamp that lights an area. It is less powerful than a torch, but more convenient.</description>
		<rotatable>true</rotatable>
		<graphicData>
			<texPath>Things/Building/Furniture/WallLight_Steam/WallLight_Steam</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawOffsetNorth>(0,0,0.9)</drawOffsetNorth>
			<drawOffsetSouth>(0,0,-0.9)</drawOffsetSouth>
			<drawOffsetWest>(-0.9,0,0)</drawOffsetWest>
			<drawOffsetEast>(0.9,0,0)</drawOffsetEast>
			<damageData>
				<enabled>false</enabled>
			</damageData>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Furniture/WallLight_Steam/WallLight_Steam_MenuIcon</uiIconPath>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<costList>
			<Steel>15</Steel>
		</costList>
		<statBases>
			<WorkToBuild>330</WorkToBuild>
			<MaxHitPoints>35</MaxHitPoints>
			<Mass>2</Mass>
		</statBases>
		<uiOrder>2991</uiOrder>
		<passability>Standable</passability>
		<terrainAffordanceNeeded IsNull="True"/>
		<pathCost>0</pathCost>
		<overrideMinifiedRot>North</overrideMinifiedRot>
		<minifiedDrawOffset>(0, 0, 0.2)</minifiedDrawOffset>
		<building>
			<isEdifice>false</isEdifice>
			<isAttachment>true</isAttachment>
		</building>
		<placeWorkers>
			<li>Placeworker_AttachedToWall</li>
		</placeWorkers>
		<comps>
			<li Class="PipeSystem.CompProperties_ResourceTrader">
				<compClass>FantasyBiotech.CompResourceTrader_Steam</compClass>
				<pipeNet>VR_SteamNet</pipeNet>
				<consumptionPerTick>0.50</consumptionPerTick>
			</li>
			<li Class="CompProperties_Power">
				<transmitsPower>false</transmitsPower>
				<compClass>FantasyBiotech.CompPowerPlantNeedResource_Steam</compClass>
				<basePowerConsumption>-1000</basePowerConsumption>
				<powerUpgrades>
					<li>
						<researchProject>ColoredLights</researchProject>
						<factor>0.5</factor>
					</li>
				</powerUpgrades>
			</li>
			<li Class="CompProperties_Styleable"/>
			<li Class="CompProperties_Glower">
				<glowRadius>11</glowRadius>
				<glowColor>(214,148,94,0)</glowColor>
				<colorPickerEnabled>true</colorPickerEnabled>
				<darklightToggle>true</darklightToggle>
			</li>
		</comps>
	</ThingDef>

</Defs>