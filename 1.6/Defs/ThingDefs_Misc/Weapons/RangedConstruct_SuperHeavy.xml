			<AccuracyMedium>1</AccuracyMedium>
			<AccuracyLong>1</AccuracyLong>
			<RangedWeapon_Cooldown>6.0</RangedWeapon_Cooldown>
		</statBases>
		<weaponTags>
			<li>Construct_GiantTeslaCannon</li>
		</weaponTags>
		<verbs>
			<li>
				<verbClass>FantasyBiotech.Verb_ColossusRay</verbClass>
