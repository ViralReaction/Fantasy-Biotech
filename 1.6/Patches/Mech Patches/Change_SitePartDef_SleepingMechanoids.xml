<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SitePartDef[defName="SleepingMechanoids"]/label</xpath>
		<value>
			<label>sleeping constructs</label>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SitePartDef[defName="SleepingMechanoids"]/description</xpath>
		<value>
			<description>A group of sleeping constructs.</description>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/SitePartDef[defName="SleepingMechanoids"]/arrivedLetter</xpath>
		<value>
			<arrivedLetter>There are a few sleeping hostile constructs in this area.\n\nThe constructs may or may not wake up when you approach them, so beware.</arrivedLetter>
		</value>
	</Operation>

</Patch>