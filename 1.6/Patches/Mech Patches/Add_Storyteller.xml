<?xml version="1.0" encoding="utf-8"?>
<Patch>

    <Operation Class="PatchOperationAdd">
        <xpath>Defs/StorytellerDef[@Name="BaseStoryteller"]/comps</xpath>
        <value>
            <li Class="FantasyBiotech.StorytellerCompProperties_SingleOnceFixed">
                <fireAfterDaysPassed>15</fireAfterDaysPassed>
                <incident MayRequire="Ludeon.RimWorld.Biotech">VR_GiveQuest_Intro_Artificer</incident>
                <skipIfOnExtremeBiome>true</skipIfOnExtremeBiome>
                <minColonistCount>3</minColonistCount>
                <allowedTargetTags>
                    <li>World</li>
                </allowedTargetTags>
                <enableIfAnyModActive>
                    <li>Ludeon.RimWorld.Biotech</li>
                </enableIfAnyModActive>
            </li>
        </value>
    </Operation>

</Patch>