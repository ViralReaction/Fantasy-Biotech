<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="ButcherCorpseMechanoid"]/label</xpath>
		<value>
			<label>shred constructs</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="ButcherCorpseMechanoid"]/description</xpath>
