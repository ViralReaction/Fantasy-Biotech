			<label>smash constructs</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="SmashCorpseMechanoid"]/description</xpath>
		<value>
			<description>Smash a dead construct with simple hand tools to salvage usable material.</description>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/RecipeDef[defName="SmashCorpseMechanoid"]/jobString</xpath>
		<value>
			<jobString>Smashing construct.</jobString>
		</value>
	</Operation>
	
