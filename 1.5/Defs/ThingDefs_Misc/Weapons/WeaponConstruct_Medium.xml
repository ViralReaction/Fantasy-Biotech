<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Name="VR_ConstructMeleeWeapon" ParentName="BaseWeapon" Abstract="True">
		<weaponClasses>
			<li>Melee</li>
		</weaponClasses>
		<tradeability>None</tradeability>
		<destroyOnDrop>true</destroyOnDrop>
		<relicChance>0</relicChance>
		<graphicData>
			<drawSize>1.0</drawSize>
		</graphicData>
		<modExtensions>
			<li Class="VFECore.ThingDefExtension">
				<weaponDraftedDrawOffsets>
					<north>
						<drawOffset>(-0.15,0.0,0.10)</drawOffset>
						<angleOffset>160</angleOffset>
					</north>
					<east>
						<drawOffset>(-0.10,0.00,0.10)</drawOffset>
						<angleOffset>-60</angleOffset>
					</east>
					<south>
						<drawOffset>(0.15,0.00,0.10)</drawOffset>
						<angleOffset>-60</angleOffset>
					</south>
					<west>
						<drawOffset>(0.10,0.0,0.10)</drawOffset>
						<angleOffset>60</angleOffset>
					</west>
				</weaponDraftedDrawOffsets>
				<usableWithShields>true</usableWithShields>
			</li>
		</modExtensions>
	</ThingDef>
 
	<!-- Scyther Blade -->
