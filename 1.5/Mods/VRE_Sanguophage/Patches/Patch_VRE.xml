			<shaderType>CutoutComplex</shaderType>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="VRE_InvocationMatrix"]/graphicData/shadowData</xpath>
