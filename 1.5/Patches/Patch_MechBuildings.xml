<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="BaseMechCharger"]/thingClass</xpath>
		<value>
			<thingClass>FantasyBiotech.Building_MechCharger_Steam</thingClass>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="BaseMechCharger"]/comps/li[@Class="CompProperties_WasteProducer"]</xpath>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="BaseMechCharger"]/comps/li[@Class="CompProperties_Flickable"]</xpath>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="BasicRecharger"]/comps</xpath>
		<value>
			<li Class="PipeSystem.CompProperties_ResourceTrader">
				<compClass>FantasyBiotech.CompResourceTrader_Steam</compClass>
				<pipeNet>VR_SteamNet</pipeNet>
				<consumptionPerTick>6</consumptionPerTick>
				<idleConsumptionPerTick>0</idleConsumptionPerTick>
			</li>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="BasicRecharger"]/comps/li[@Class="CompProperties_Power"]</xpath>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="BasicRecharger"]/comps/li[@Class="CompProperties_ThingContainer"]</xpath>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="StandardRecharger"]/comps/li[@Class="CompProperties_Power"]</xpath>
	</Operation>
	
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="StandardRecharger"]/comps/li[@Class="CompProperties_ThingContainer"]</xpath>
	</Operation>

</Patch>